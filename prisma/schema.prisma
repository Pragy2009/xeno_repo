// 1. Config for Vercel & Local
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. The Data Models
model Tenant {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique  // <--- The code needs this line to work!
  orders    Order[]
  customers Customer[]
}

model Order {
  id          String   @id @default(uuid())
  shopifyId   String
  amount      Float
  date        DateTime
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
}

model Customer {
  id          String   @id @default(uuid())
  shopifyId   String
  name        String
  totalSpent  Float
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
}