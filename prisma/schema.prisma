// This solves the ORM and RDBMS requirement [cite: 17, 37]
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id        String   @id @default(uuid())
  storeName String
  domain    String   @unique // e.g., my-store.myshopify.com
  token     String   // The API Access Token
  orders    Order[]
  products  Product[]
  customers Customer[]
}

model Order {
  id          String   @id @default(uuid())
  shopifyId   String   // Original ID from Shopify
  totalPrice  Float
  createdAt   DateTime
  currency    String
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
}

model Product {
  id          String   @id @default(uuid())
  shopifyId   String
  title       String
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
}

model Customer {
  id          String   @id @default(uuid())
  shopifyId   String
  email       String
  totalSpent  Float    // Needed for "Top 5 customers" [cite: 26]
  tenantId    String
  tenant      Tenant   @relation(fields: [tenantId], references: [id])
}