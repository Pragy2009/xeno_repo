// 1. Config for Vercel & Local
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 2. The Data Models
model Tenant {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  createdAt DateTime @default(now())

  orders    Order[]
  customers Customer[]
}

model Customer {
  id         Int     @id @default(autoincrement())
  shopifyId  String  @unique
  name       String
  totalSpent Float   @default(0)
  tenantId   Int
  tenant     Tenant  @relation(fields: [tenantId], references: [id])
  orders     Order[]
}

model Order {
  id        Int      @id @default(autoincrement())
  shopifyId String   @unique
  amount    Float    @default(0)
  date      DateTime
  tenantId  Int
  tenant    Tenant   @relation(fields: [tenantId], references: [id])

  // Link the order to a customer (nullable if order might have no customer)
  customerId Int? // nullable to allow guest orders without a customer row
  customer   Customer? @relation(fields: [customerId], references: [id])

  createdAt DateTime @default(now())
}
